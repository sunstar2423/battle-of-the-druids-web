# Environment Variables for TitanBlade Games
# Copy this file to .env and fill in your actual values

# Google Analytics Configuration
# Get your tracking ID from https://analytics.google.com/
GOOGLE_ANALYTICS_ID=G-XXXXXXXXX

# Website Configuration
# Your main website URL
SITE_URL=https://titanbladegames.com

# Contact Information
# Email address for contact forms and support
CONTACT_EMAIL=contact@titanbladegames.com

# AWS Deployment (for GitHub Actions)
# These are set as GitHub repository secrets, not in .env files
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BUCKET=your-s3-bucket-name
# CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_id

# Development Settings
# Set to 'true' to enable debug mode in games
DEBUG_MODE=false

# API Keys (if you add external services)
# Example: Weather API, game leaderboards, etc.
# EXTERNAL_API_KEY=your_api_key_here